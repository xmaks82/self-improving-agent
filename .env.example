# ===========================================
# Self-Improving Agent Configuration
# ===========================================

# =========== API KEYS ===========

# Groq (FREE) - РЕКОМЕНДУЕТСЯ, очень быстрый
# Модели: llama-4-maverick, llama-3.3-70b, qwen3-32b, kimi-k2
# https://console.groq.com/
GROQ_API_KEY=gsk_...

# DeepSeek (FREE 5M tokens/month) - сильный reasoning
# Модели: deepseek-chat (V3.2), deepseek-reasoner (R1)
# https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-...

# Zhipu AI (free tier) - строгий rate limit
# Модели: glm-4.7, glm-4.5-air, glm-4-plus
# https://open.bigmodel.cn/
ZHIPU_API_KEY=...

# Anthropic (paid) - для Claude моделей
# https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# =========== MODEL CONFIGURATION ===========

# Модель по умолчанию для основного агента
#
# БЕСПЛАТНЫЕ (Groq - рекомендуется):
#   llama-4-maverick   - новейшая Llama 4 (128 experts)
#   llama-4-scout      - Llama 4 быстрая (16 experts)
#   llama-3.3-70b      - production, проверенная
#   qwen3-32b          - thinking mode
#   kimi-k2            - Moonshot AI
#   gpt-oss-120b       - OpenAI open source
#
# БЕСПЛАТНЫЕ (DeepSeek - 5M/month):
#   deepseek-chat      - V3.2, универсальная
#   deepseek-reasoner  - R1, reasoning
#
# ПЛАТНЫЕ (Anthropic):
#   claude-opus-4.5    - лучшая
#   claude-sonnet      - баланс
#
DEFAULT_MODEL=llama-4-maverick

# Модели для pipeline улучшения (любая с поддержкой tools)
ANALYZER_MODEL=llama-3.3-70b
VERSIONER_MODEL=llama-3.3-70b

# Модель для детекции фидбека (быстрая)
FEEDBACK_MODEL=llama-4-scout

# =========== THRESHOLDS ===========

# Минимальная уверенность для детекции фидбека (0.0-1.0)
FEEDBACK_CONFIDENCE_THRESHOLD=0.8

# Минимальная уверенность для запуска улучшения (0.0-1.0)
IMPROVEMENT_CONFIDENCE_THRESHOLD=0.6

# =========== LOGGING ===========

LOG_LEVEL=INFO
